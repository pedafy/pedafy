{{template "header" .}}
{{template "materialize"}}
{{template "navbar" .}}
<main>
    {{$prod := .Production}}
    {{$status := .Data.Status}}
    <div class="container">
        <div class="row">
            {{range $index, $task := .Data.Tasks}}
            <div class="col s12 m12">
                <div class="card white darken-1">
                    <div class="card-content dark-text">
                        <span class="card-title">{{.Title}}</span>
                    </div>
                </div>
            </div>
    
            <div class="col s12 m12">
                <div class="card white darken-1">
                    <div class="card-content dark-text">
                        <h6>Description:</h6>
                        <p>{{.Description}}</p>
                        <h6>Status:
                        {{$currentTaskStatusID := .StatusID}}
                        {{range $status}}
                            {{if eq .ID $currentTaskStatusID}}
                                {{if eq .Name "archived"}}
                                    <span>archived</span>
                                {{end}}
                                {{if eq .Name "done"}}
                                    <span>done</span>
                                {{end}}
                                {{if eq .Name "pending"}}
                                    <span>pending</span>
                                {{end}}
                            {{end}}
                        {{end}}
                        </h6>
                        <h6>Created at: <p>{{.CreatedAt}}</p></h6>
                        <h6>Last edit: <p>{{.LastEdit}}</p></h6>
                    </div>
                    <div class="card-action">
                        {{if eq $prod true}}
                            <a href="https://pedafy.com/task/modify/{{.ID}}">Modify</a>
                        {{end}}
                        {{if eq $prod false}}
                            <a href="/task/modify/{{.ID}}">Modify</a>
                        {{end}}
                    </div>
                </div>
            </div>
            {{end}}
        </div>
    </div>
</main>
{{template "footer"}}